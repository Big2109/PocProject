@using Poc.Models
@{
    ViewData["Title"] = "Login";
}

@model UsuarioModel
<div class="body">
    <div id="particles">
        <div id="tsparticles">
            <div class="d-flex justify-content-center py-4 px-2">
                <div class="card p-4">
                    <h2 class="py-2 text-center">LOGIN</h2>
                    <form asp-action="Entrar" method="post">
                        <div class="mb-3">
                            <label asp-for="NomeUsuario" class="form-label"> Nome do usuário ou Email </label>
                            <input asp-for="NomeUsuario" class="form-control" type="text/email" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Senha" class="form-label"></label>
                            <input asp-for="Senha" class="form-control" type="password" />
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Entrar</button>
                        </div>

                    </form>
                </div>
            </div>
            <div class="d-flex justify-content-center py-4 px-2" style="position: relative; z-index: 10;">
                <div class="d-flex" style="flex-direction: column;">
                    <h3>Novo Usuário?</h3>
                    <a class="mt-3 btn btn-primary" asp-area="" asp-controller="Login"
                        asp-action="Registrar">Registrar-se</a>
                </div>
            </div>
        </div>
    </div>
</div>