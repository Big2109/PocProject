@using Poc.Models
@{
    ViewData["Title"] = "Login";
}

@model UsuarioModel
<section>
    <div class="flex items-center flex-column justify-center min-h-screen">
        <div class="card h-[450px] w-[450px] text-center">
            <h2 class="py-3">LOGIN</h2>
            <form asp-action="Entrar" method="post" class="flex flex-col gap-4 w-full max-w-md mx-auto px-4 sm:px-3">
                <div class="flex flex-col">
                    <label asp-for="NomeUsuario">Nome do usuário ou Email</label>
                    <input asp-for="NomeUsuario" type="text" />
                </div>
                <div class="flex flex-col">
                    <label asp-for="Senha">Senha</label>
                    <input asp-for="Senha" type="password" />
                </div>
                <div class="flex flex-column justify-center py-4">
                    <button type="submit" class="login-btn bg-gray400">
                        Entrar
                    </button>
                </div>
            </form>
            <div class="py-4">
                <h3 class="text-white">Novo Usuário?</h3>
                <a class="mt-3 text-[#5670c7] hover:text-gray400 transition-colors" asp-area="" asp-controller="Login"
                    asp-action="Registrar">Registrar-se</a>
            </div>
        </div>
    </div>
</section>