<div id="feedback">
    <div class="modal fade" role="modal" id="feedback-modal" tabindex="-1" aria-labelledby="feedback-modal"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 mt-2 text-center">
                            <template v-if="tipo === 'alerta'">
                                <i class="fas fa-exclamation-triangle fa-3x text-warning"></i><br>
                            </template>

                            <template v-else-if="tipo === 'sucesso'">
                                <i class="fas fa-check-circle fa-3x text-success"></i><br>
                            </template>

                            <template v-else-if="tipo === 'erro'">
                                <i class="fas fa-window-close fa-3x text-danger"></i><br>
                            </template>

                            <p class="mt-3 text-dark" v-html="mensagem" style="line-height: 25px;"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>