@model Guid
<div id="DeletarUsuarioModal" class="modal d-none">
    <div class="relative bg-gradient-to-t from-gray600 to-gray700 rounded-lg shadow-lg p-5 w-90 text-center">
        <button onclick="window.HideModal('DeletarUsuarioModal')"
            class="absolute top-2 right-3 text-gray400 text-xl hover:text-gray300">
            &times;
        </button>
        <div class="p-3">
            <span>
                <i class="fas fa-trash-can fa-2x text-red-500"></i>
            </span>
        </div>
        <p class="text-white mb-6">Deseja realmente deletar este usu√°rio?</p>
        <div class="flex justify-between items-center gap-10 border-t pt-3 border-gray500">
            <a class="cancel-btn" onclick="window.HideModal('DeletarUsuarioModal')" href="#">Cancelar</a>
            <form asp-action="DeletarUsuario" asp-route-guidUsuario="@Model" method="post">
                <button type="submit" class="confirm-btn">Confirmar</button>
            </form>
        </div>
    </div>
</div>