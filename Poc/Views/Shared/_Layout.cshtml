<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/vue@3.3.4/dist/vue.global.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2.11.1/tsparticles.bundle.min.js"></script>
</head>

<body>
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index" title="Home">
                    <i class="logo"></i>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="mainNavbar">
                    <ul class="navbar-nav flex-grow-1"></ul>

                    <!-- Login/Sair -->
                    <div>
                        @{
                            var controller = ViewContext.RouteData.Values["controller"] is string c ? c : "";
                            if (controller != "Login")
                            {
                                var usuario = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNome");
                                if (string.IsNullOrEmpty(usuario))
                                {
                                    <a class="btn btn-primary text-white" asp-area="" asp-controller="Login"
                                        asp-action="Index">Login</a>
                                }
                                else
                                {
                                    <a class="btn btn-primary text-white" asp-area="" asp-controller="Login"
                                        asp-action="Sair">Sair</a>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </nav>

    </header>

    <!-- Conteúdo MVC -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2025 - Eric Marques Bighi - <a class="d-inline" asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
            @*
            <a class="nav-link" href="https://github.com/Big2109/PocProject" target="_blank" title="GitHub">
                <i class="fab fa-github" style="color: #fff"></i>
            </a> *@
        </div>
    </footer>

    @await Html.PartialAsync("_FeedbackModal")

    <!-- Scripts -->

    <script src="~/js/Vue/main.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/Vue/Modal/feedback.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/Vue/Poc/index.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/Vue/Login/index.js" type="text/javascript" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData["ExibirModal"] != null)
    {
        <script>
            const modalData = {
                tipo: "@TempData["TipoModal"]",
                mensagem: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["MensagemModal"])),
                camposInvalidos: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["CamposInvalidos"]))
                                                                                                                                                                                                                                                                                                                                                                                                                                            };

            showFeedbackModal(modalData.tipo, modalData.mensagem, modalData.camposInvalidos);
        </script>
    }
</body>

</html>